CREATE TABLE tblMATURITYRATING
(
RatingID INTEGER NOT NULL,
RatingName VARCHAR2(20) NOT NULL,
Rating_Explanation VARCHAR2(50) NOT NULL,
CONSTRAINT MaturityRating_PK PRIMARY KEY (RatingID)
);
 
CREATE TABLE tblFORMAT
(FormatID INTEGER NOT NULL,
FormatName VARCHAR2(20) NOT NULL,
CONSTRAINT Format_PK PRIMARY KEY (FormatID)
);
 
CREATE TABLE tblTHEATRE
(
TheatreID INTEGER NOT NULL,
Name VARCHAR2(20) NOT NULL,
PostalCode CHAR2(6) NOT NULL,
Phone CHAR(9) ,
License INTEGER NOT NULL,
Class VARCHAR2(20),
Notice VARCHAR (20),
CONSTRAINT Theatre_PK PRIMARY KEY (TheatreID)
);
 
CREATE TABLE tblLOCATION
(
LocationID INTEGER,
City VARCHAR2(20),
Province VARCHAR2(20),
TheatreID INTEGER NOT NULL
CONSTRAINT Location_PK PRIMARY KEY (LocationID),
CONSTRAINT Location_FK FOREIGN KEY (TheatreID)
);
 
CREATE TABLE tblDATE
(
DateID DATE NOT NULL,
Month MONTH,
Day DD,
Year YYYY,
CONSTRAINT Date_PK PRIMARY KEY (DateID)
) ;
 
 
CREATE TABLE tblMOVIE
(
MovieID INTEGER NOT NULL,
MovieName VARCHAR2(30) NOT NULL,
Year YYYY NOT NULL,
Synopsis VARCHAR2(50) NOT NULL,
Hour NUMBER(1,0) NOT NULL,
Min NUMBER (2,0) NOT NULL,
RatingID INTEGER NOT NULL,
DateID INTEGER NOT NULL,
CONSTRAINT Movie_PK PRIMARY KEY (MovieID),
CONSTRAINT Movie_FK FOREIGN KEY (RatingID, DateID)
 )
 
CREATE TABLE tblGENRE
(
GenreID INTEGER NOT NULL,
GenreName VARCHAR2(20) NOT NULL,
CONSTRAINT Genre_PK PRIMARY KEY (GenreID)
);
 
CREATE TABLE tblPERSON
(
PersonID, INTEGER NOT NULL,
FirstName VARCHAR2(20),
LastName VARCHAR2(20),
BirthDate DATE
CONSTRAINT Person_PK PRIMARY KEY (PersonID)
);
 
CREATE TABLE tblMOVIE_FORMAT
(
MovieID INTEGER NOT NULL,
FormatID INTEGER NOT NULL,
CONSTRAINT Movie_Format_PK PRIMARY KEY (MovieID, FormatID)
);
 
CREATE TABLE tblMOVIE_GENRE
(
MovieID INTEGER NOT NULL,
GenreID INTEGER NOT NULL,
CONSTRAINT Movie_Genre_PK PRIMARY KEY (MovieID, GenreID)
);
 
CREATE TABLE tblCREDIT
(
CreditID INTEGER NOT NULL,
CreditName VARCHAR2(20) NOT NULL,
CONSTRAINT Credit_PK PRIMARY KEY (CreditID)
);
 
CREATE TABLE tblMOVE_PERSON
(
MovieID INTEGER NOT NULL ,
PersonID INTEGER NOT NULL ,
CONSTRAINT Movie_Person_PK PRIMARY KEY (MovieID, PersonID)
);
 
CREATE TABLE tblMOVIE_PERSON_CREDIT
(
MovieID INTEGER NOT NULL,
PersonID INTEGER NOT NULL,
CreditID INTEGER NOT NULL,
CONSTRAINT Movie_Person_Credit_PK PRIMARY KEY (MovieID, PersonID, CreditID)
);
 
CREATE TABLE tblTHEATRE_FORMAT
(
TheatreID INTEGER NOT NULL,
FormatID INTEGER NOT NULL
CONSTRAINT Theatre_Format_PK PRIMARY KEY (TheatreID, FormatID)
);
 
CREATE TABLE tblTHEATRE_FORMAT_DATE
(
TheatreID INTEGER NOT NULL,
FormatID INTEGER NOT NULL
DateID INTEGER NOT NULL
CONSTRAINT Theatre_Format_Date_PK PRIMARY KEY (TheatreID, FormatID, DateID)
);
 
CREATE TABLE tblAGE_GROUP
(
AgeGroupID INTEGER NOT NULL,
AgeGroupName VARCAR2(20) NOT NULL,
Ages NUMBER(3,0) NOT NULL
CONSTRAINT Age_Group_PK PRIMARY KEY (AgeGroupID)
);
 
CREATE TABLE tblTHEATRE_FORMAT_DATE_AGEGROUP
(
TheatreID INTEGER NOT NULL,
FormatID INTEGER NOT NULL
DateID INTEGER NOT NULL,
AgeGroupID NOT NULL,
Price NUMBER(4,0)
CONSTRAINT Theatre_Format_Date_AgeGroup_PK PRIMARY KEY (TheatreID, FormatID, DateID, AgeGroupID)
);
 
CREATE TABLE tblAUDITORIUM
(
AuditoriumID INTEGER NOT NULL,
Name VARCHAR2(20) NOT NULL,
Capacity INTEGER,
TheatreID INTEGER NOT NULL,
FormatID INTEGER NOT NULL,
CONSTRAINT Auditorium_PK PRIMARY KEY (AuditoriumID, TheatreID, FormatID)
);
 
CREATE TABLE tblSHOWTIME
(
AuditoriumID INTEGER NOT NULL,
TheatreID INTEGER NOT NULL,
Format INTEGER NOT NULL
MovieID INTEGER NOT NULL,
DateID INTEGER NOT NULL
CONSTRAINT Showtime_PK PRIMARY KEY (AuditoriumID, TheatreID, FormatID, MovieID, DateID)
);
